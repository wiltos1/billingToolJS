    <script>
        const ACTIONS_BY_STATUS = {
            Admitted: [
                { value: 'attended', label: 'Attended', needsTime: false, needsDelivery: false },
                { value: 'delivery', label: 'Delivery', needsTime: true, needsDelivery: true }
            ],
            Delivered: [
                { value: 'rounds', label: 'Rounds', needsTime: false, needsDelivery: false, needsRounds: true }
            ]
        };
        const ACTION_CONFIG = {
            triage_visit: { label: 'Triage Visit', needsTime: false, needsDelivery: false },
            triage_reassessment: { label: 'Triage Re-assessment', needsTime: false, needsDelivery: false },
            attended: { label: 'Attended', needsTime: false, needsDelivery: false },
            delivery: { label: 'Delivery', needsTime: true, needsDelivery: true },
            rounds: { label: 'Rounds', needsTime: false, needsDelivery: false, needsRounds: true },
            tongue_tie_clip: { label: 'Tongue Tie Clip', needsTime: false, needsDelivery: false, needsTongueTie: true }
        };

        function getStatusAtTime(option, slotTime) {
            if (!option || !slotTime) return '';
            const triageStart = option.getAttribute('data-triage-start');
            const statusEventsRaw = option.getAttribute('data-status-events') || '[]';
            const admittedAt = option.getAttribute('data-admitted-at');
            const deliveredAt = option.getAttribute('data-delivered-at');
            const dischargedAt = option.getAttribute('data-discharged-at');

            const toDate = (val) => {
                if (!val) return null;
                const parsed = new Date(val);
                return Number.isNaN(parsed.valueOf()) ? null : parsed;
            };

            const triageDt = toDate(triageStart);
            const admittedDt = toDate(admittedAt);
            const deliveredDt = toDate(deliveredAt);
            const dischargedDt = toDate(dischargedAt);

            const baseOrder = { Triage: 1, Admitted: 2, Delivered: 3, Discharged: 4 };
            const events = [];
            if (triageDt) events.push({ time: triageDt, status: 'Triage', order: baseOrder.Triage });
            if (admittedDt) events.push({ time: admittedDt, status: 'Admitted', order: baseOrder.Admitted });
            if (deliveredDt) events.push({ time: deliveredDt, status: 'Delivered', order: baseOrder.Delivered });
            if (dischargedDt) events.push({ time: dischargedDt, status: 'Discharged', order: baseOrder.Discharged });
            let parsedEvents = [];
            try {
                parsedEvents = JSON.parse(statusEventsRaw);
            } catch (err) {
                parsedEvents = [];
            }
            parsedEvents.forEach((event) => {
                const eventTime = toDate(event.occurred_at);
                if (!eventTime) return;
                if (!baseOrder[event.status]) return;
                const afterStatus = (event.after_status || '').trim() || 'Triage';
                const afterOrder = afterStatus.startsWith('event:')
                    ? baseOrder[event.status]
                    : (baseOrder[afterStatus] || baseOrder.Triage);
                events.push({ time: eventTime, status: event.status, order: afterOrder + 0.5 });
            });

            if (!events.length) return '';
            events.sort((a, b) => (a.time - b.time) || (a.order - b.order));
            let status = '';
            events.forEach((event) => {
                const requiresStrict = event.status === 'Delivered' || event.status === 'Discharged';
                const qualifies = requiresStrict ? event.time < slotTime : event.time <= slotTime;
                if (qualifies) {
                    status = event.status;
                }
            });
            return status;
        }

        function applyCellState(cell) {
            if (!cell) return;
            const locked = cell.getAttribute('data-locked') === '1';
            const patientSelect = cell.querySelector('.patient-select');
            const actionSelect = cell.querySelector('.action-select');
            const deliverySel = cell.querySelector('.delivery-select');
            const bmiproSelect = cell.querySelector('.bmipro-select');
            const bmiproToggle = cell.querySelector('.bmipro-toggle');
            const bmiproToggleInput = cell.querySelector('.bmipro-toggle-input');
            const babyGenderInput = cell.querySelector('.baby-gender-input');
            const babyGenderToggle = cell.querySelector('.baby-gender-toggle');
            const babyGenderToggleInput = cell.querySelector('.baby-gender-toggle-input');
            const babyGenderLabel = cell.querySelector('.baby-gender-label');
            const deliveryTime = cell.querySelector('.delivery-time');
            const timeLabel = cell.querySelector('.slot-time');
            const triageExtras = cell.querySelector('[data-triage-extras]');
            const triageExtraInputs = cell.querySelectorAll('.triage-extra-input');
            const deliveryExtras = cell.querySelector('[data-delivery-extras]');
            const deliveryExtraInputs = cell.querySelectorAll('.delivery-extra-input');
            const roundsFields = cell.querySelector('[data-rounds-fields]');
            const roundsCareSelect = cell.querySelector('.rounds-care-select');
            const roundsSupportiveInput = cell.querySelector('.rounds-supportive-input');
            const tongueTieFields = cell.querySelector('[data-tongue-tie-fields]');
            const tongueTieSupportiveInput = cell.querySelector('.tongue-tie-supportive-input');

            const selectedOption = patientSelect ? patientSelect.selectedOptions[0] : null;
            const patientType = selectedOption ? (selectedOption.getAttribute('data-patient-type') || 'mother') : 'mother';
            const slotTimeRaw = cell.getAttribute('data-slot-time');
            const slotTime = slotTimeRaw ? new Date(slotTimeRaw) : null;
            const status = getStatusAtTime(selectedOption, slotTime);
            let actions = ACTIONS_BY_STATUS[status] ? [...ACTIONS_BY_STATUS[status]] : [];
            const existingAction = actionSelect ? (actionSelect.getAttribute('data-existing-action') || '') : '';
            let currentAction = actionSelect ? (actionSelect.value || existingAction) : '';

            if (!patientSelect || !actionSelect) return;

            if (!patientSelect.value) {
                actionSelect.value = '';
                actionSelect.setAttribute('data-existing-action', '');
                actionSelect.style.display = 'none';
                actionSelect.disabled = true;
                if (deliverySel) {
                    deliverySel.value = '';
                    deliverySel.style.display = 'none';
                    deliverySel.disabled = true;
                }
                if (deliveryTime) {
                    deliveryTime.value = slotTimeRaw || '';
                    deliveryTime.style.display = 'none';
                    deliveryTime.disabled = true;
                }
                if (babyGenderToggle) {
                    babyGenderToggle.style.display = 'none';
                }
                if (babyGenderToggleInput) {
                    babyGenderToggleInput.checked = false;
                    babyGenderToggleInput.disabled = true;
                }
                if (babyGenderInput) {
                    babyGenderInput.value = '';
                }
                if (deliveryExtras) {
                    deliveryExtras.style.display = 'none';
                }
                deliveryExtraInputs.forEach((input) => {
                    input.checked = false;
                    input.disabled = true;
                });
                if (triageExtras) {
                    triageExtras.style.display = 'none';
                }
                triageExtraInputs.forEach((input) => {
                    input.checked = false;
                    input.disabled = true;
                });
                if (roundsFields) {
                    roundsFields.style.display = 'none';
                }
                if (roundsCareSelect) {
                    roundsCareSelect.value = '';
                    roundsCareSelect.disabled = true;
                }
                if (roundsSupportiveInput) {
                    roundsSupportiveInput.checked = false;
                    roundsSupportiveInput.disabled = true;
                }
                if (tongueTieFields) {
                    tongueTieFields.style.display = 'none';
                }
                if (tongueTieSupportiveInput) {
                    tongueTieSupportiveInput.checked = false;
                    tongueTieSupportiveInput.disabled = true;
                }
                if (timeLabel) {
                    timeLabel.style.display = 'none';
                }
                return;
            }

            if (patientType === 'baby') {
                actions = status === 'Admitted' ? [{
                    value: 'rounds',
                    label: ACTION_CONFIG.rounds.label,
                    needsTime: ACTION_CONFIG.rounds.needsTime,
                    needsDelivery: ACTION_CONFIG.rounds.needsDelivery,
                    needsRounds: ACTION_CONFIG.rounds.needsRounds
                }, {
                    value: 'tongue_tie_clip',
                    label: ACTION_CONFIG.tongue_tie_clip.label,
                    needsTime: ACTION_CONFIG.tongue_tie_clip.needsTime,
                    needsDelivery: ACTION_CONFIG.tongue_tie_clip.needsDelivery,
                    needsTongueTie: ACTION_CONFIG.tongue_tie_clip.needsTongueTie
                }] : [];
                if (!currentAction && actions.length) {
                    actionSelect.setAttribute('data-existing-action', 'rounds');
                    currentAction = 'rounds';
                }
            }

            if (patientType !== 'baby' && status === 'Triage') {
                const triageAction = selectedOption ? selectedOption.getAttribute('data-triage-action') : '';
                if (triageAction && ACTION_CONFIG[triageAction]) {
                    actions = [{
                        value: triageAction,
                        label: ACTION_CONFIG[triageAction].label,
                        needsTime: ACTION_CONFIG[triageAction].needsTime,
                        needsDelivery: ACTION_CONFIG[triageAction].needsDelivery
                    }];
                    if (!currentAction) {
                        actionSelect.setAttribute('data-existing-action', triageAction);
                        currentAction = triageAction;
                    }
                } else {
                    actions = [];
                }
            }

            actionSelect.innerHTML = '';
            const placeholder = document.createElement('option');
            placeholder.value = '';
            placeholder.textContent = '--';
            actionSelect.appendChild(placeholder);
            if (currentAction && !actions.some((action) => action.value === currentAction)) {
                const fallback = ACTION_CONFIG[currentAction] || { label: currentAction, needsTime: false, needsDelivery: false };
                actions = actions.concat([{
                    value: currentAction,
                    label: fallback.label,
                    needsTime: fallback.needsTime,
                    needsDelivery: fallback.needsDelivery
                }]);
            }
            actions.forEach((action) => {
                const opt = document.createElement('option');
                opt.value = action.value;
                opt.textContent = action.label;
                actionSelect.appendChild(opt);
            });
            const hasActions = actions.length > 0;
            if (!hasActions) {
                const emptyOpt = document.createElement('option');
                emptyOpt.value = '';
                emptyOpt.textContent = 'No actions';
                actionSelect.appendChild(emptyOpt);
            }
            actionSelect.style.display = 'block';
            actionSelect.disabled = locked || !hasActions;
            if (currentAction) {
                actionSelect.value = currentAction;
            }

            const selectedAction = actions.find((a) => a.value === actionSelect.value) || null;
            const actionMeta = selectedAction || ACTION_CONFIG[actionSelect.value] || null;
            const showDelivery = actionMeta && actionMeta.needsDelivery;
            const showTime = actionMeta && actionMeta.needsTime;
            const showRounds = actionMeta && actionMeta.needsRounds;
            const showTongueTie = actionMeta && actionMeta.needsTongueTie;

            if (deliverySel) {
                deliverySel.style.display = showDelivery ? 'block' : 'none';
                if (!showDelivery) deliverySel.value = '';
                deliverySel.disabled = !showDelivery || locked;
            }
            if (bmiproSelect) {
                bmiproSelect.style.display = 'none';
                if (!showDelivery) bmiproSelect.value = '';
                bmiproSelect.disabled = !showDelivery || locked;
            }
            if (bmiproToggle) {
                bmiproToggle.style.display = showDelivery ? 'block' : 'none';
                if (!showDelivery && bmiproToggleInput) {
                    bmiproToggleInput.checked = false;
                }
                if (bmiproToggleInput) {
                    bmiproToggleInput.disabled = !showDelivery || locked;
                }
            }
            if (babyGenderToggle) {
                babyGenderToggle.style.display = showDelivery ? 'block' : 'none';
                if (!showDelivery && babyGenderToggleInput) {
                    babyGenderToggleInput.checked = false;
                }
                if (babyGenderToggleInput) {
                    babyGenderToggleInput.disabled = !showDelivery || locked;
                }
                if (babyGenderLabel) {
                    babyGenderLabel.textContent = babyGenderToggleInput && babyGenderToggleInput.checked ? 'Girl' : 'Boy';
                }
            }
            if (babyGenderInput) {
                if (!showDelivery) babyGenderInput.value = '';
            }
            if (deliveryTime) {
                deliveryTime.style.display = showTime ? 'block' : 'none';
                deliveryTime.disabled = !showTime || locked;
            }
            if (timeLabel) {
                timeLabel.style.display = showTime ? 'block' : 'none';
            }
            if (deliveryExtras) {
                const showDeliveryExtras = actionSelect.value === 'delivery';
                deliveryExtras.style.display = showDeliveryExtras ? 'block' : 'none';
                deliveryExtraInputs.forEach((input) => {
                    if (!showDeliveryExtras) {
                        input.checked = false;
                    }
                    input.disabled = !showDeliveryExtras || locked;
                    if (showDeliveryExtras) {
                        input.onchange = () => saveGrid();
                    }
                });
            }
            if (triageExtras) {
                const showExtras = actionSelect.value === 'triage_visit' || actionSelect.value === 'triage_reassessment';
                triageExtras.style.display = showExtras ? 'block' : 'none';
                triageExtraInputs.forEach((input) => {
                    if (!showExtras) {
                        input.checked = false;
                    }
                    input.disabled = !showExtras || locked;
                    if (showExtras) {
                        input.onchange = () => saveGrid();
                    }
                });
            }
            if (roundsFields) {
                roundsFields.style.display = showRounds ? 'block' : 'none';
            }
            if (roundsCareSelect) {
                if (!showRounds) roundsCareSelect.value = '';
                roundsCareSelect.disabled = !showRounds || locked;
                if (showRounds) {
                    roundsCareSelect.onchange = () => saveGrid();
                }
            }
            if (roundsSupportiveInput) {
                if (!showRounds) roundsSupportiveInput.checked = false;
                roundsSupportiveInput.disabled = !showRounds || locked;
                if (showRounds) {
                    roundsSupportiveInput.onchange = () => saveGrid();
                }
            }
            if (tongueTieFields) {
                tongueTieFields.style.display = showTongueTie ? 'block' : 'none';
            }
            if (tongueTieSupportiveInput) {
                if (!showTongueTie) tongueTieSupportiveInput.checked = false;
                tongueTieSupportiveInput.disabled = !showTongueTie || locked;
                if (showTongueTie) {
                    tongueTieSupportiveInput.onchange = () => saveGrid();
                }
            }
        }
        function setSavingIndicator() {
            const indicator = document.getElementById('save-indicator');
            if (!indicator) return;
            indicator.textContent = 'Saving...';
        }
        function setExitDisabled(disabled) {
            document.querySelectorAll('a[data-save-grid]').forEach((link) => {
                if (disabled) {
                    link.classList.add('disabled-link');
                    link.setAttribute('aria-disabled', 'true');
                } else {
                    link.classList.remove('disabled-link');
                    link.removeAttribute('aria-disabled');
                }
            });
        }

        function validateGrid() {
            const warningBanner = document.getElementById('grid-warning');
            const warnings = [];
            document.querySelectorAll('td.cell-warning').forEach((cell) => {
                cell.classList.remove('cell-warning');
            });

            document.querySelectorAll('td').forEach((cell) => {
                const patientSelect = cell.querySelector('.patient-select');
                const actionSelect = cell.querySelector('.action-select');
                if (!patientSelect || !actionSelect) return;
                if (!patientSelect.value) return;
                const action = actionSelect.value || '';
                if (!action && !actionSelect.disabled) {
                    warnings.push('Select an action for each patient slot.');
                    cell.classList.add('cell-warning');
                    return;
                }
                if (action === 'delivery') {
                    const deliverySelect = cell.querySelector('.delivery-select');
                    if (deliverySelect && !deliverySelect.disabled && !deliverySelect.value) {
                        warnings.push('Select a delivery method for each delivery slot.');
                        cell.classList.add('cell-warning');
                        return;
                    }
                    const bmiproSelect = cell.querySelector('.bmipro-select');
                    if (bmiproSelect && !bmiproSelect.disabled && !bmiproSelect.value) {
                        warnings.push('Select BMIPRO Yes/No for each delivery slot.');
                        cell.classList.add('cell-warning');
                        return;
                    }
                    const deliveryTimeInput = cell.querySelector('.delivery-time');
                    const slotTimeRaw = cell.getAttribute('data-slot-time');
                    if (deliveryTimeInput && !deliveryTimeInput.disabled && !deliveryTimeInput.value) {
                        warnings.push('Enter a delivery time for each delivery slot.');
                        cell.classList.add('cell-warning');
                        return;
                    }
                    if (deliveryTimeInput && deliveryTimeInput.value && slotTimeRaw) {
                        const slotStart = new Date(slotTimeRaw);
                        const slotEnd = new Date(slotStart.getTime() + 15 * 60 * 1000);
                        const deliveryTime = new Date(deliveryTimeInput.value);
                        if (deliveryTime < slotStart || deliveryTime >= slotEnd) {
                            warnings.push('Delivery time must fall within the selected 15-minute slot.');
                            cell.classList.add('cell-warning');
                        }
                    }
                }
                if (action === 'rounds') {
                    const roundsCareSelect = cell.querySelector('.rounds-care-select');
                    if (roundsCareSelect && !roundsCareSelect.disabled && !roundsCareSelect.value) {
                        warnings.push('Select a rounds care type for each rounds slot.');
                        cell.classList.add('cell-warning');
                        return;
                    }
                }
            });

            if (warningBanner) {
                if (warnings.length) {
                    warningBanner.textContent = warnings[0];
                    warningBanner.style.display = 'block';
                } else {
                    warningBanner.textContent = '';
                    warningBanner.style.display = 'none';
                }
            }
            const isValid = warnings.length === 0;
            setExitDisabled(!isValid);
            return isValid;
        }

        function saveGrid(callback) {
            const form = document.getElementById('grid-form');
            if (!form) { if (callback) callback(); return false; }
            if (!validateGrid()) { return false; }
            const data = new URLSearchParams(new FormData(form));
            setSavingIndicator();
            fetch(form.action, {
                method: 'POST',
                body: data.toString(),
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'fetch'
                },
                keepalive: true
            })
                .finally(() => { updateSaveIndicator(); if (callback) callback(); });
            return false;
        }
        function updateSaveIndicator() {
            const indicator = document.getElementById('save-indicator');
            if (!indicator) return;
            const now = new Date();
            const hh = String(now.getHours()).padStart(2, '0');
            const mm = String(now.getMinutes()).padStart(2, '0');
            const ss = String(now.getSeconds()).padStart(2, '0');
            indicator.textContent = `Saved: ${hh}:${mm}:${ss}`;
        }
        function beaconSave() {
            const form = document.getElementById('grid-form');
            if (!form || !navigator.sendBeacon) { return false; }
            const payload = new URLSearchParams(new FormData(form));
            setSavingIndicator();
            const sent = navigator.sendBeacon(form.action, payload);
            if (sent) updateSaveIndicator();
            return sent;
        }
        document.querySelectorAll('a[data-save-grid]').forEach((link) => {
            link.addEventListener('click', (event) => {
                if (event.defaultPrevented || event.button !== 0 || event.metaKey || event.ctrlKey || event.shiftKey || event.altKey) {
                    return;
                }
                event.preventDefault();
                saveGrid(() => { window.location = link.href; });
            });
        });
        document.querySelectorAll('td').forEach((cell) => {
            if (cell.querySelector('.patient-select')) {
                applyCellState(cell);
            }
        });
        document.querySelectorAll('.bmipro-toggle').forEach((toggle) => {
            const input = toggle.querySelector('.bmipro-toggle-input');
            const select = toggle.closest('td') ? toggle.closest('td').querySelector('.bmipro-select') : null;
            if (!input || !select) return;
            const sync = () => {
                select.value = input.checked ? 'yes' : 'no';
            };
            sync();
            input.addEventListener('change', () => {
                sync();
                saveGrid();
            });
        });
        document.querySelectorAll('.baby-gender-toggle').forEach((toggle) => {
            const input = toggle.querySelector('.baby-gender-toggle-input');
            const hidden = toggle.closest('td') ? toggle.closest('td').querySelector('.baby-gender-input') : null;
            const label = toggle.closest('td') ? toggle.closest('td').querySelector('.baby-gender-label') : null;
            if (!input || !hidden) return;
            const sync = () => {
                hidden.value = input.checked ? 'Girl' : 'Boy';
                if (label) label.textContent = input.checked ? 'Girl' : 'Boy';
            };
            sync();
            input.addEventListener('change', () => {
                sync();
                saveGrid();
            });
        });
        validateGrid();
        updateSaveIndicator();
        document.addEventListener('visibilitychange', () => {
            if (document.visibilityState === 'hidden') {
                beaconSave();
            }
        });
        window.addEventListener('beforeunload', () => {
            beaconSave();
        });

        const verificationPatients = <%- JSON.stringify(verification_patients || []) %>;
        const verificationModal = document.getElementById('verification-modal');
        const verificationBody = document.getElementById('verification-body');
        const verificationQuestion = document.getElementById('verification-question');
        const verificationYes = document.getElementById('verification-yes');
        const verificationNo = document.getElementById('verification-no');
        const verificationCancel = document.getElementById('verification-cancel');
        const endShiftBtn = document.getElementById('end-shift-btn');
        const currentDoctorId = <%= shiftDoctor && shiftDoctor.id ? shiftDoctor.id : 'null' %>;
        const currentWindowId = <%= shiftWindow && shiftWindow.id ? shiftWindow.id : 'null' %>;

        const questionForStatus = (status, hasContinuousMonitoring) => {
            if (status === 'Triage') {
                return 'Did you admit this patient?';
            }
            if ((status === 'Admitted' || status === 'Delivered') && !hasContinuousMonitoring) {
                return 'Did you perform an induction or start continuous monitoring?';
            }
            return '';
        };

        const verificationQueue = verificationPatients
            .map((patient) => ({
                ...patient,
                question: questionForStatus(patient.last_status, patient.has_continuous_monitoring)
            }));

        let verificationIndex = 0;
        const finalizeEndShift = () => {
            if (verificationModal) {
                verificationModal.style.display = 'none';
                verificationModal.setAttribute('aria-hidden', 'true');
            }
            fetch('/shift_grid/end_shift', {
                method: 'POST',
                headers: { 'X-Requested-With': 'fetch' }
            }).finally(() => {
                if (currentDoctorId && currentWindowId) {
                    const iframe = document.createElement('iframe');
                    iframe.style.display = 'none';
                    iframe.src = `/optimization/doctor/${currentDoctorId}/optimized_pdf?window_id=${currentWindowId}`;
                    document.body.appendChild(iframe);
                }
                setTimeout(() => {
                    window.location = '/doctors/manage';
                }, 900);
            });
        };
        const nextVerification = () => {
            if (!verificationQueue.length) {
                if (verificationBody) {
                    verificationBody.textContent = 'No verification questions for current active patients.';
                }
                if (verificationQuestion) {
                    verificationQuestion.textContent = 'Finish shift and set all doctors to inactive?';
                }
                if (verificationNo) {
                    verificationNo.style.display = 'none';
                }
                if (verificationYes) {
                    verificationYes.style.display = 'inline-flex';
                    verificationYes.textContent = 'Finish Shift';
                }
                if (verificationModal) {
                    verificationModal.style.display = 'flex';
                    verificationModal.setAttribute('aria-hidden', 'false');
                }
                return;
            }
            if (verificationIndex < verificationQueue.length) {
                const patient = verificationQueue[verificationIndex];
                if (verificationBody) {
                    verificationBody.textContent = `Patient #${patient.id}  ${patient.initials} (${patient.identifier}) (${verificationIndex + 1}/${verificationQueue.length})`;
                }
                if (verificationQuestion) {
                    verificationQuestion.textContent = patient.question || 'No verification questions for this patient.';
                }
                if (verificationNo) {
                    verificationNo.style.display = 'inline-flex';
                    verificationNo.textContent = patient.question ? 'No' : 'Next';
                }
                if (verificationYes) {
                    verificationYes.textContent = 'Yes';
                    verificationYes.style.display = patient.question ? 'inline-flex' : 'none';
                }
                if (verificationModal) {
                    verificationModal.style.display = 'flex';
                    verificationModal.setAttribute('aria-hidden', 'false');
                }
                return;
            }
            finalizeEndShift();
        };

        if (endShiftBtn) {
            endShiftBtn.addEventListener('click', () => {
                verificationIndex = 0;
                nextVerification();
            });
        }
        if (verificationCancel) {
            verificationCancel.addEventListener('click', () => {
                if (verificationModal) {
                    verificationModal.style.display = 'none';
                    verificationModal.setAttribute('aria-hidden', 'true');
                }
            });
        }
        if (verificationNo) {
            verificationNo.onclick = () => {
                if (!verificationQueue.length) {
                    finalizeEndShift();
                    return;
                }
                verificationIndex += 1;
                nextVerification();
            };
        }
        if (verificationYes) {
            verificationYes.onclick = () => {
                if (!verificationQueue.length) {
                    finalizeEndShift();
                    return;
                }
                const patient = verificationQueue[verificationIndex];
                if (!patient || !patient.question) return;
                window.location = `/?view=active&selected_patient=${patient.id}`;
            };
        }

        const otherBillingModal = document.getElementById('other-billing-modal');
        const otherBillingBtn = document.getElementById('other-billing-btn');
        const otherBillingCancel = document.getElementById('other-billing-cancel');
        const otherBillingConfirm = document.getElementById('other-billing-confirm');
        const otherBillingAction = document.getElementById('other-billing-action');
        const otherBillingTime = document.getElementById('other-billing-time');
        const otherBillingEndWrap = document.getElementById('other-billing-end-wrap');
        const otherBillingEndTime = document.getElementById('other-billing-end-time');
        const otherBillingWarning = document.getElementById('other-billing-warning');
        const phoneOptions = document.getElementById('other-billing-phone-options');
        const phoneCode = document.getElementById('other-billing-phone-code');
        const cmgpWrap = document.getElementById('other-billing-cmgp');
        const cmgpSelect = document.getElementById('other-billing-cmgp-select');
        const familyWrap = document.getElementById('other-billing-family');
        const familyPatient = document.getElementById('other-billing-family-patient');
        const stillbornWrap = document.getElementById('other-billing-stillborn');
        const stillbornBaby = document.getElementById('other-billing-stillborn-baby');
        const surgicalWrap = document.getElementById('other-billing-surgical');
        const surgicalMom = document.getElementById('other-billing-surgical-mom');
        const admissionWrap = document.getElementById('other-billing-admission');
        const admissionMom = document.getElementById('other-billing-admission-mom');
        const otherBillingCode = document.getElementById('other-billing-code');
        const otherBillingModifier = document.getElementById('other-billing-modifier');
        const otherBillingId = document.getElementById('other-billing-id');
        const shiftStart = new Date('<%= format_local(new Date(shiftWindow.start_datetime)) %>');
        const shiftEnd = new Date('<%= format_local(new Date(shiftWindow.end_datetime)) %>');
        const occupiedSlots = new Set(<%- JSON.stringify(occupied_slots || []) %>);
        let heldOccupied = [];

        if (otherBillingCancel) {
            otherBillingCancel.addEventListener('click', () => {
                if (otherBillingModal) {
                    otherBillingModal.style.display = 'none';
                    otherBillingModal.setAttribute('aria-hidden', 'true');
                }
                heldOccupied.forEach((key) => occupiedSlots.add(key));
                heldOccupied = [];
            });
        }
        if (otherBillingConfirm) {
            otherBillingConfirm.addEventListener('click', () => {
                if (otherBillingConfirm.disabled) return;
                if (otherBillingModal) {
                    otherBillingModal.style.display = 'none';
                    otherBillingModal.setAttribute('aria-hidden', 'true');
                }
                heldOccupied.forEach((key) => occupiedSlots.add(key));
                heldOccupied = [];
            });
        }
        const resetOtherBilling = () => {
            if (otherBillingAction) otherBillingAction.value = '';
            if (phoneCode) phoneCode.value = '';
            if (cmgpSelect) cmgpSelect.value = '';
            if (familyPatient) familyPatient.value = '';
            if (stillbornBaby) stillbornBaby.value = '';
            if (surgicalMom) surgicalMom.value = '';
            if (admissionMom) admissionMom.value = '';
            if (otherBillingTime) otherBillingTime.value = '';
            if (otherBillingEndTime) otherBillingEndTime.value = '';
            if (otherBillingCode) otherBillingCode.value = '';
            if (otherBillingModifier) otherBillingModifier.value = '';
            if (otherBillingId) otherBillingId.value = '';
        };
        const updateOtherBillingVisibility = () => {
            const action = otherBillingAction ? otherBillingAction.value : '';
            if (phoneOptions) phoneOptions.style.display = action === 'phone_call' ? 'block' : 'none';
            if (familyWrap) familyWrap.style.display = action === 'family_conference' ? 'block' : 'none';
            if (stillbornWrap) stillbornWrap.style.display = action === 'stillborn_exam' ? 'block' : 'none';
            if (surgicalWrap) surgicalWrap.style.display = action === 'surgical_assist' ? 'block' : 'none';
            if (admissionWrap) admissionWrap.style.display = action === 'admission' ? 'block' : 'none';
            if (otherBillingEndWrap) {
                const needsEndTime = action === 'surgical_assist' || action === 'delivery_detention';
                otherBillingEndWrap.style.display = needsEndTime ? 'block' : 'none';
            }
            if (cmgpWrap) {
                const showCmgp = action === 'phone_call' && phoneCode && phoneCode.value === '03.03CV';
                cmgpWrap.style.display = showCmgp ? 'block' : 'none';
                if (!showCmgp && cmgpSelect) cmgpSelect.value = '';
            }
        };
        const computeAdmissionModifier = (time) => {
            if (!time) return '';
            const day = time.getDay();
            const hm = time.getHours() + time.getMinutes() / 60;
            const isWeekend = day === 0 || day === 6;
            if (hm >= 22) return 'HANTPM';
            if (hm < 7) return 'HANTAM';
            if (isWeekend) {
                if (hm >= 7 && hm < 22) return 'HAEVWK';
            } else if (hm >= 17 && hm < 22) {
                return 'HAEV';
            }
            return '';
        };
        const isValidOtherBilling = () => {
            const action = otherBillingAction ? otherBillingAction.value : '';
            if (!action) return false;
            const timeVal = otherBillingTime ? otherBillingTime.value : '';
            if (!timeVal) return false;
            const time = new Date(timeVal);
            const inWindow = time >= shiftStart && time <= shiftEnd;
            if (!inWindow) return false;
            const slotKey = timeVal;
            if (action !== 'delivery_detention' && occupiedSlots.has(slotKey)) return false;
            if (action === 'stillborn_exam') {
                return !!(stillbornBaby && stillbornBaby.value);
            }
            if (action === 'family_conference') {
                return !!(familyPatient && familyPatient.value);
            }
            if (action === 'phone_call') {
                if (!phoneCode || !phoneCode.value) return false;
            }
            if (action === 'surgical_assist') {
                if (!surgicalMom || !surgicalMom.value) return false;
                const endVal = otherBillingEndTime ? otherBillingEndTime.value : '';
                if (!endVal) return false;
                const end = new Date(endVal);
                if (end <= time || end > shiftEnd) return false;
                const slots = [];
                let cursor = new Date(time);
                while (cursor < end) {
                    const yyyy = cursor.getFullYear();
                    const mm = String(cursor.getMonth() + 1).padStart(2, '0');
                    const dd = String(cursor.getDate()).padStart(2, '0');
                    const hh = String(cursor.getHours()).padStart(2, '0');
                    const mi = String(cursor.getMinutes()).padStart(2, '0');
                    const key = `${yyyy}-${mm}-${dd}T${hh}:${mi}`;
                    slots.push(key);
                    cursor = new Date(cursor.getTime() + 15 * 60 * 1000);
                }
                if (slots.some((key) => occupiedSlots.has(key))) return false;
            }
            if (action === 'delivery_detention') {
                const endVal = otherBillingEndTime ? otherBillingEndTime.value : '';
                if (!endVal) return false;
                const end = new Date(endVal);
                if (end <= time || end > shiftEnd) return false;
                const detentionMinutes = Math.round((end - time) / (60 * 1000));
                if (detentionMinutes < 30) return false;
            }
            if (action === 'admission') {
                if (!admissionMom || !admissionMom.value) return false;
            }
            return true;
        };
        const updateOtherBillingState = () => {
            updateOtherBillingVisibility();
            const timeVal = otherBillingTime ? otherBillingTime.value : '';
            let inWindow = false;
            if (timeVal) {
                const time = new Date(timeVal);
                inWindow = time >= shiftStart && time <= shiftEnd;
            }
            if (otherBillingWarning) {
                const action = otherBillingAction ? otherBillingAction.value : '';
                const blockedBySlot = action !== 'delivery_detention' && timeVal && occupiedSlots.has(timeVal);
                const blockedByWindow = timeVal && !inWindow;
                let detentionMessage = '';
                if (action === 'delivery_detention' && timeVal && otherBillingEndTime && otherBillingEndTime.value) {
                    const start = new Date(timeVal);
                    const end = new Date(otherBillingEndTime.value);
                    const detentionMinutes = Math.round((end - start) / (60 * 1000));
                    if (end <= start) {
                        detentionMessage = 'Finish time must be after start time.';
                    } else if (detentionMinutes < 30) {
                        detentionMessage = 'Delivery detention must be at least 30 minutes.';
                    }
                }
                const blocked = blockedByWindow || blockedBySlot || !!detentionMessage;
                otherBillingWarning.style.display = blocked ? 'block' : 'none';
                if (blocked) {
                    if (detentionMessage) {
                        otherBillingWarning.textContent = detentionMessage;
                    } else if (blockedBySlot) {
                        otherBillingWarning.textContent = 'Time overlaps an existing shift grid entry.';
                    } else {
                        otherBillingWarning.textContent = 'Time must be within the current on-call window.';
                    }
                } else {
                    otherBillingWarning.textContent = 'Time must be within the current on-call window.';
                }
            }
            const action = otherBillingAction ? otherBillingAction.value : '';
            if (otherBillingCode) {
                if (action === 'delivery_detention') otherBillingCode.value = '87.98E';
                else if (action === 'stillborn_exam') otherBillingCode.value = '03.7A';
                else if (action === 'family_conference') otherBillingCode.value = '03.05JC';
                else if (action === 'surgical_assist') otherBillingCode.value = '86.9D SA';
                else if (action === 'admission') otherBillingCode.value = '03.04C';
                else if (action === 'phone_call') otherBillingCode.value = phoneCode ? phoneCode.value : '';
                else otherBillingCode.value = '';
            }
            if (otherBillingModifier) {
                if (action === 'phone_call' && phoneCode && phoneCode.value === '03.03CV') {
                    otherBillingModifier.value = cmgpSelect && cmgpSelect.value ? cmgpSelect.value : '';
                } else if (action === 'admission' && timeVal) {
                    const time = new Date(timeVal);
                    otherBillingModifier.value = computeAdmissionModifier(time);
                } else {
                    otherBillingModifier.value = '';
                }
            }
            if (otherBillingConfirm) {
                otherBillingConfirm.disabled = !isValidOtherBilling();
                if (otherBillingConfirm.disabled) {
                    otherBillingConfirm.classList.add('secondary-btn');
                } else {
                    otherBillingConfirm.classList.remove('secondary-btn');
                }
            }
        };
        if (otherBillingBtn && otherBillingModal) {
            otherBillingBtn.addEventListener('click', () => {
                resetOtherBilling();
                updateOtherBillingVisibility();
                updateOtherBillingState();
                otherBillingModal.style.display = 'flex';
                otherBillingModal.setAttribute('aria-hidden', 'false');
                heldOccupied.forEach((key) => occupiedSlots.add(key));
                heldOccupied = [];
            });
        }
        if (otherBillingAction) {
            otherBillingAction.addEventListener('change', () => updateOtherBillingState());
        }
        if (phoneCode) {
            phoneCode.addEventListener('change', () => updateOtherBillingState());
        }
        if (cmgpSelect) {
            cmgpSelect.addEventListener('change', () => updateOtherBillingState());
        }
        if (familyPatient) {
            familyPatient.addEventListener('change', () => updateOtherBillingState());
        }
        if (stillbornBaby) {
            stillbornBaby.addEventListener('change', () => updateOtherBillingState());
        }
        if (surgicalMom) {
            surgicalMom.addEventListener('change', () => updateOtherBillingState());
        }
        if (admissionMom) {
            admissionMom.addEventListener('change', () => updateOtherBillingState());
        }
        if (otherBillingTime) {
            otherBillingTime.addEventListener('change', () => updateOtherBillingState());
        }
        if (otherBillingEndTime) {
            otherBillingEndTime.addEventListener('change', () => updateOtherBillingState());
        }

        document.querySelectorAll('.other-billing-edit').forEach((btn) => {
            btn.addEventListener('click', () => {
                const row = btn.closest('tr');
                if (!row) return;
                if (otherBillingId) otherBillingId.value = row.getAttribute('data-other-id') || '';
                if (otherBillingAction) otherBillingAction.value = row.getAttribute('data-other-action') || '';
                const start = row.getAttribute('data-other-start') || '';
                const end = row.getAttribute('data-other-end') || '';
                if (otherBillingTime) otherBillingTime.value = start;
                if (otherBillingEndTime) otherBillingEndTime.value = end;
                const removed = [];
                const action = row.getAttribute('data-other-action') || '';
                if (start && action !== 'delivery_detention') {
                    const startDt = new Date(start);
                    const endDt = end ? new Date(end) : new Date(startDt.getTime() + 15 * 60 * 1000);
                    let cursor = new Date(startDt);
                    while (cursor < endDt) {
                        const yyyy = cursor.getFullYear();
                        const mm = String(cursor.getMonth() + 1).padStart(2, '0');
                        const dd = String(cursor.getDate()).padStart(2, '0');
                        const hh = String(cursor.getHours()).padStart(2, '0');
                        const mi = String(cursor.getMinutes()).padStart(2, '0');
                        const key = `${yyyy}-${mm}-${dd}T${hh}:${mi}`;
                        if (occupiedSlots.has(key)) {
                            occupiedSlots.delete(key);
                            removed.push(key);
                        }
                        cursor = new Date(cursor.getTime() + 15 * 60 * 1000);
                    }
                }
                heldOccupied = removed;
                const patientId = row.getAttribute('data-other-patient') || '';
                if (familyPatient) familyPatient.value = patientId;
                if (stillbornBaby) stillbornBaby.value = patientId;
                if (surgicalMom) surgicalMom.value = patientId;
                if (admissionMom) admissionMom.value = patientId;
                if (phoneCode && row.getAttribute('data-other-action') === 'phone_call') {
                    phoneCode.value = row.getAttribute('data-other-code') || '';
                }
                if (cmgpSelect) {
                    cmgpSelect.value = row.getAttribute('data-other-cmgp') || '';
                }
                updateOtherBillingVisibility();
                updateOtherBillingState();
                if (otherBillingModal) {
                    otherBillingModal.style.display = 'flex';
                    otherBillingModal.setAttribute('aria-hidden', 'false');
                }
            });
        });
        document.addEventListener('keydown', (event) => {
            if (event.key === 'Escape' && otherBillingModal && otherBillingModal.getAttribute('aria-hidden') === 'false') {
                otherBillingModal.style.display = 'none';
                otherBillingModal.setAttribute('aria-hidden', 'true');
                heldOccupied.forEach((key) => occupiedSlots.add(key));
                heldOccupied = [];
            }
        });
    </script>
</body>
